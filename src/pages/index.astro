---
import { getImage } from "astro:assets";

import Shakespeare from "../images/Shakespeare.jpg";
import ComboBox from "../components/Combobox.svelte";

const smImage = await getImage({
  src: Shakespeare,
  quality: "high",
  width: 140,
  height: 140,
});

const mdImage = await getImage({
  src: Shakespeare,
  quality: "high",
  width: 140,
  height: 140,
});

const lgImage = await getImage({
  src: Shakespeare,
  quality: "high",
  width: 140,
  height: 140,
});

const xlImage = await getImage({
  src: Shakespeare,
  format: "jpeg",
  width: 500,
  height: 500,
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + TailwindCSS</title>
  </head>

  <body>
    <div class="container mx-auto p-4">
      <div
        class="grid grid-cols-1 xl:grid-cols-2 mt-4 border-2 border-yellow-500"
      >
        <div class="flex justify-center xl:block">
          <picture>
            <!-- TODO: add one more -->
            <source media="(max-width: 767px)" srcset={smImage.src} />
            <source media="(max-width: 1023px)" srcset={mdImage.src} />
            <source media="(max-width: 1279px)" srcset={lgImage.src} />
            <source media="(min-width: 1280px)" srcset={xlImage.src} />
            <img class="rounded" src={xlImage.src} alt="" />
          </picture>
        </div>
        <div
          class="p-4 flex flex-col items-center xl:items-start xl:pt-72 xl:order-first"
        >
          <h2
            class="text-3xl xl:text-5xl text-center xl:text-left font-serif py-0 mb-7 xl:mb-[44px] w-48 xl:w-96 leading-normal"
          >
            Speak Like Shakespeare
          </h2>
          <div class="w-full sm:max-w-sm xl:max-w-md">
            <ComboBox client:load />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
