---
const { content } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/Shakespeare.jpg" />
    <title>{content.title}</title>
  </head>
  <body class="font-serif flex justify-center min-h-screen">
    <div
      class="container lg:mx-auto mx-2 max-w-prose border-2 border-purple-400"
    >
      <div class="text-center my-6">
        <h1 class="h1 lg:text-5xl text-3xl">{content.title}</h1>
      </div>
      <div class="prose border-2 border-red-500 text-lg">
        <slot />
      </div>
    </div>
  </body>
</html>

<!-- @todo: handle wide monitor -->

<style>
  .prose {
    max-width: none;
  }
</style>
